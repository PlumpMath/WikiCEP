@using WikiCEP_Project.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar Sesion";
}
<link href="~/Content/EstiloLogin.css" rel="stylesheet" />
<div class="container">
    <h2 class="row">
        <div class="col-md-3"></div>
        <span class="col-md-6" style="text-align:center">@ViewBag.Title</span>
        <div class="col-md-3"></div>
    </h2>
</div>
<hr />
@*<div>
    <h2>
        <span class="label label-primary">@ViewBag.Title</span>
    </h2>
</div>*@

<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="container">
                    <div class="card card-container">
                        <!-- <img class="profile-img-card" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" /> -->
                        <img id="profile-img" class="profile-img-card" src="~/Img/WikiCEP_Logo.png" />
                        <p id="profile-name" class="profile-name-card"></p>
                        <form class="form-signin">

                            <div class="form-group row">

                                <div class="col-md-12">
                                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">

                                <div class="col-md-12">
                                    @Html.PasswordFor(m => m.Password, new { placeholder = "Contraseña", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">

                                <div class="col-md-12">
                                    <button class="btn btn-lg btn-primary btn-block " type="submit">Ingresar</button>
                                </div>
                                <br />
                                    <div class="checkbox, col-md-12" style="margin-top:10px">
                                        @Html.CheckBoxFor(m => m.RememberMe)
                                        @Html.LabelFor(m => m.RememberMe)
                                    
                                </div>
                            </div>
                        </form><!-- /form -->
                    </div><!-- /card-container -->
                </div><!-- /container -->


                <p>
                @Html.ActionLink("Ingresar con nuevo Usuario", "Register")
                </p>

                @* Enable this once you have account confirmation enabled for password reset functionality
                    <p>
                        @Html.ActionLink("Forgot your password?", "ForgotPassword")
                    </p>*@
            }
        </section>
    </div>
   
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}