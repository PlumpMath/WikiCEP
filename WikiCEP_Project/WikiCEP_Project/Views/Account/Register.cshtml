@model WikiCEP_Project.Models.RegisterViewModel
@{
    ViewBag.Title = "Crear una Cuenta Nueva";
}
<link href="~/Content/EstiloLogin.css" rel="stylesheet" />
<div class="container">
    <h2 class="row">
        <div class="col-md-3"></div>
        <span class="col-md-6" style="text-align:center">@ViewBag.Title</span>
        <div class="col-md-3"></div>
    </h2>
</div>
<hr />
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

<div class="container">
    
    <div class="card card-container">
       
        <img id="profile-img" class="profile-img-card" src="~/Img/WikiCEP_Logo.png" />
        <p id="profile-name" class="profile-name-card"></p>
        <form class="form-signin">
            <div class="form-group row">
                
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Contraseña" , @class = "form-control" }) 
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirmar Contraseña", @class = "form-control" })
                </div>
            </div>
            


</form><!-- /form -->
        <button class="btn btn-lg btn-primary btn-block" type="submit">Crear Cuenta</button>

    </div>
</div>

<div class="alert alert-danger" role="alert">
    <h4>
        <strong>Requisitos:</strong> La Contraseña debe tener:<br />

    </h4>
</div>
    <div>
        <h4>
            <strong>1)</strong> 2 Caracteres Especiales <br />
            <strong>2)</strong> 2 Mayusculas <br />
            <strong>3)</strong> 2 Minusculas <br />
            <strong>4)</strong> 2 Numeros
        </h4>
    </div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

}
