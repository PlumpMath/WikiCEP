@model WikiCEP_Project.Models.Definicione

@{
    ViewBag.Title = "Detalles";
}

<div>
    <h2>
       @Html.DisplayFor(model => model.Titulo)        
    </h2>
</div>
<hr />
<div>
    <dl class="dl-horizontal">
        <dt>
            Autor
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AspNetUser.Email)
        </dd>
    </dl>
    <hr />
    <dl class="dl-horizontal">
        <dd>
            <span style="white-space: pre-line">@Html.DisplayFor(model => model.Texto)</span>
        </dd>
    </dl>
    <dl>
        <dt>
            Imágenes
        </dt>
        <dd>
            <br />
            @Html.ActionLink("Nueva Imagen para la Definicion", "../Imagenes/Create", new { pIdDefinicion = Model.IDDefinicion })
            <br />
            @Html.Action("CargarImagenes", "Imagenes", new { idDefinicion = Model.IDDefinicion })
        </dd>
    </dl>
    <dl>
        <dt>
            Tutoriales de YouTube
        </dt>
        <dd>
            <br />
            @Html.ActionLink("Nuevo Tutorial para la Definicion", "../TutorialesYouTube/Create", new { pIdDefinicion = Model.IDDefinicion })
            <br />
            @Html.Action("CargarTutoriales", "TutorialesYouTube", new { idDefinicion = Model.IDDefinicion })
        </dd>
    </dl>
    <dl>
        <dt>
            Ejemplos en Código
        </dt>
        <dd>
            <br />
            @Html.ActionLink("Nuevo Ejemplo para la Definicion", "../Ejemplos/Create", new { pIdDefinicion = Model.IDDefinicion })
            <br />
            @Html.Action("CargarEjemplos", "Ejemplos", new { idDefinicion = Model.IDDefinicion })
        </dd>
    </dl>
    <hr />
    <dl>
        <dt>
            Temas
        </dt>
        <dd>
            @foreach (var tema in Model.Temas.ToList())
            {
                <span class="label label-success">@tema.Descripcion</span>}
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.IDDefinicion }) |
    @Html.ActionLink("Eliminar", "Delete", new { id = Model.IDDefinicion }) |
    @Html.ActionLink("Volver al Inicio", "Index", "Home") |
    @Html.ActionLink("Ir a la Lista", "Index")
</p>
