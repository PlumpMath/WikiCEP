@model IEnumerable<WikiCEP_Project.Models.vDefinicionesReciente>

@{
    ViewBag.Title = "Home Page";
}
<br />
<div class="jumbotron" style="background-image: url('/Imagenes/Sofrecom.png');background-color:#F2F2F2;padding-bottom:40px; background-repeat: no-repeat; background-attachment:fixed; text-align:right;">
    <h1>Bienvenidos a WikiCEP</h1>
    <p class="lead"> Brindamos informacion de las tecnologias .NET y SQL server</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg"> Leer Mas &raquo;</a></p>
</div>
<div class="row">
    @foreach (var definicion in Model)
    {
        <div class="col-md-4">
            <h2>@Html.DisplayFor(modelItem => definicion.Titulo)</h2>
            <p>
                @Html.DisplayFor(modelItem => definicion.Texto)
            </p>
            <p class="btn btn-default">@Html.ActionLink("Detalles", "../Definiciones/Details", new { id = definicion.IDDefinicion })</p>
        </div>
    }
</div>