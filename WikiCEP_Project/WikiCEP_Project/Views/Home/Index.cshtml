@model IEnumerable<WikiCEP_Project.Models.vDefinicionesReciente>

@{
    ViewBag.Title = "Home Page";
}
<br />
<div class="jumbotron" style="background-image: url('/Img/Sofrecom.png');background-color:#F2F2F2;padding-bottom:40px; background-repeat: no-repeat; background-attachment:fixed; text-align:right;">
    <h1>Bienvenidos a WikiCEP</h1>
    <p class="lead"> Brindamos informacion de las tecnologias .NET y SQL server</p>
</div>
<hr />
<br />
<br />
<div class="row">
    @foreach (var definicion in Model)
    {
        <div class="col-sm-4">
            <div class="panel panel-default">
                <div class="panel-heading text-center">
                    <h2 class="panel-title">
                        @Html.DisplayFor(modelItem => definicion.Titulo)
                    </h2>
                </div>
                @{  string texto = definicion.Texto.ToString();
                }
                @if (definicion.Texto.Length < 100)
                {
                    <div class="panel-body text-justify">@texto</div>
                }
                else
                {
                    <div class="panel-body text-justify">@texto.Substring(0, 100)...</div>
                }
                <div class="panel-heading text-center"><h2 class="panel-title">@Html.ActionLink("Detalles", "../Definiciones/Details", new { id = definicion.IDDefinicion })</h2></div>
            </div>
        </div>

    }
</div>
<br />
<br />
