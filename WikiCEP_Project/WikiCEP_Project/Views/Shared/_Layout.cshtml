<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - WikiCep </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/EstiloGrid.css" rel="stylesheet" />
    <style>
        .logo {
            padding-top: 6px;
            margin: 0px;
            font-family: Helvetica, sans-serif;
            display: inline-block;
        }

        .wiki {
            color: #354D53;
        }

        .c {
            color: #AED520;
        }

        .e {
            color: #11C1B8;
        }

        .p {
            color: #FF6C0B;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <h2 class="logo wiki">Wiki<span class="logo c">C</span><span class="logo e">E</span><span class="logo p">P</span></h2>
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
                <ul class="navbar navbar-right" style="margin-bottom: 10px; list-style-type:none;">
                    <li>
                        @using (Html.BeginForm("Index", "Definiciones", FormMethod.Post))
                        {
                            @Html.TextBox("strBusqueda", "", new { @style = "margin-top:13px", placeholder = "Buscar definicion" });
                            <input type="submit" class="btn btn-default btn-sm" value="Buscar">
                        }
                    </li>
                </ul>
            </div>
        </div>
        <div class="container navbar-inverse" style="margin:0px; width:100%">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Definiciones<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Ver", "Index", "Definiciones")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Agregar", "Create", "Definiciones")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Imagenes<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Ver", "Index", "Imagenes")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Agregar", "Create", "Imagenes")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Tutoriales<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Ver", "Index", "TutorialesYoutube")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Agregar", "Create", "TutorialesYoutube")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Ejemplos<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Ver", "Index", "Ejemplos")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Agregar", "Create", "Ejemplos")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Nosotros", "About", "Home")</li>
                    <li>@Html.ActionLink("Sala de chat", "Index", "Chat")</li>
                </ul>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - CEP 14</p>
            <p>Sofrecom Argentina S.A</p>
            <p>Reconquista 609, Piso 7</p>
            <p>Ciudad Autonoma de Buenos Aires, Argentina</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
