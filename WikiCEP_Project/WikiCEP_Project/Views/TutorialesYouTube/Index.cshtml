@model IEnumerable<WikiCEP_Project.Models.TutorialesYouTube>

@{
    ViewBag.Title = "Tutoriales de YouTube";
    WebGrid grid = new WebGrid(Model, rowsPerPage: 8);
    WikiCEP_Project.Models.TutorialesYouTube tutorial = new WikiCEP_Project.Models.TutorialesYouTube();
}

<h2>@ViewBag.Title</h2>
<hr />
<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<br />

@using (Html.BeginForm())
{
    <p>
        Buscar por Titulo: @Html.TextBox("strBusqueda")
        <input type="submit" value="Buscar" class="btn btn-default" />
    </p>
}
<hr />

@grid.GetHtml(
    fillEmptyRows: false,
    tableStyle: "webgrid-table",
    headerStyle: "webgrid-header",
    footerStyle: "webgrid-footer",
    alternatingRowStyle: "webgrid-alternating-row",
    rowStyle: "webgrid-row-style",
    mode: WebGridPagerModes.All,
    firstText: "<< Primera",
    previousText: "< Anterior",
    nextText: "Siguiente >",
    lastText: "Última >>",

columns: new[]
{
    grid.Column("Titulo",header:"Titulo", format: (item) =>item.GetSelectLink(item.Titulo)),
    grid.Column("",
          header: "Acciones",
          format:
        @<text>
            @Html.ActionLink("Editar",   "Edit",   new { id=item.IDTutorial } )
            @Html.ActionLink("Eliminar", "Delete", new { id=item.IDTutorial } )
        </text>
    )

 })

@if (grid.HasSelection)
{
    tutorial = (WikiCEP_Project.Models.TutorialesYouTube)grid.Rows[grid.SelectedIndex].Value;
    <br />
    <div>
        <b>@tutorial.Titulo: </b> @Html.ActionLink("Detalles", "../TutorialesYouTube/Details", new { id = tutorial.IDTutorial }) |
                                  <a href="@Html.Raw(tutorial.LinkYouTube).ToString()">Ir al Link</a>
    </div>
    <br />

}

<hr />
<div>
    @Html.ActionLink("Volver al Inicio", "Index", "Home")
</div>