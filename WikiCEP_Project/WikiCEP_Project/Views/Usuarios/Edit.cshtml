@model WikiCEP_Project.Models.AspNetUser

@{
    ViewBag.Title = "Editar Usuario";
}

<h2>
    @ViewBag.Title
</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
     <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <h4 class="col-md-2">Nombre de Usuario:</h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
         <hr />
        <div class="form-group" style="text-align:start">
            <h4>Roles:</h4>
            <select multiple="Multiple" style="width:100%" id="listaRoles" name="listaRoles">
                @foreach (var r in (List<WikiCEP_Project.Models.AspNetRole>)ViewBag.Roles) {
                    var sel = (Model.AspNetRoles.Where(rol => rol.Id == r.Id).Count() > 0) ? "selected" : "";
                    <option value=@r.Id @sel>@r.Name</option>
                }
            </select>

        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar Cambios" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<hr />
<div>
    @Html.ActionLink("Volver a la Lista", "Index") |
    @Html.ActionLink("Ir al Inicio", "Home", "Index")
</div>
