@model WikiCEP_Project.Models.AspNetUser

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Usuario</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <p>Roles</p>
            <select multiple="Multiple" style="width:100%" id="listaRoles" name="listaRoles">
                @foreach (var r in (List<WikiCEP_Project.Models.AspNetRole>)ViewBag.Roles) {
                    var sel = (Model.AspNetRoles.Where(rol => rol.Id == r.Id).Count() > 0) ? "selected" : "";
                    <option value=@r.Id @sel>@r.Name</option>
                }
            </select>

        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>
